<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.justcorrections.grit.account.LoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <!-- image or logo -->

        <ImageView
            android:id="@+id/create_logo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@android:color/white"
            android:contentDescription="@string/logo_description" />

        <!-- username input -->

        <android.support.design.widget.TextInputLayout
            android:id="@+id/create_user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_logo"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:paddingEnd="4dp"
            android:paddingStart="48dp"
            android:paddingTop="4dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/create_user_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress" />

        </android.support.design.widget.TextInputLayout>

        <!-- password input -->

        <android.support.design.widget.TextInputLayout
            android:id="@+id/create_pass_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_user_layout"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:paddingEnd="4dp"
            android:paddingStart="48dp"
            android:paddingTop="4dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/create_pass_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        <!-- password check -->

        <android.support.design.widget.TextInputLayout
            android:id="@+id/create_check_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_pass_layout"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:paddingEnd="4dp"
            android:paddingStart="48dp"
            android:paddingTop="4dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/create_check_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        <!-- user icon -->

        <ImageView
            android:id="@+id/create_user_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_below="@id/create_logo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/user_icon_description"
            android:src="@drawable/ic_user" />

        <!-- key icon -->

        <ImageView
            android:id="@+id/create_pass_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_below="@id/create_user_layout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/password_icon_description"
            android:src="@drawable/ic_key" />

        <!-- lock icon -->

        <ImageView
            android:id="@+id/create_check_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_below="@id/create_pass_layout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/password_icon_description"
            android:src="@drawable/ic_lock" />

        <!-- login button -->

        <Button
            android:id="@+id/create_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_check_layout"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="16dp"
            android:background="@color/colorAccent"
            android:text="@string/create_account"
            android:textColor="@android:color/white" />

        <!-- create account button -->

        <Button
            android:id="@+id/create_registered_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_account_button"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/already_have_an_account"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </RelativeLayout>

</ScrollView>
