<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.justcorrections.grit.modules.signup.SignupNamesAge">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">


        <TextView
            android:id="@+id/tv_confirm_name_label"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:paddingTop="4dp"
            android:text="@string/name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_imageview" />

        <TextView
            android:id="@+id/tv_confirm_name_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="32dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/tv_confirm_name_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_confirm_name_label" />


        <TextView
            android:id="@+id/tv_confirm_age_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="4dp"
            android:text="@string/birthday"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_confirm_name_label"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_name_value" />

        <TextView
            android:id="@+id/tv_confirm_age_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_confirm_name_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_confirm_age_label" />


        <TextView
            android:id="@+id/tv_confirm_gender_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="4dp"
            android:text="@string/gender"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_confirm_name_label"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_age_value" />

        <TextView
            android:id="@+id/tv_confirm_gender_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_confirm_name_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_confirm_gender_label" />


        <TextView
            android:id="@+id/tv_confirm_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="4dp"
            android:text="@string/address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_confirm_name_label"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_gender_value" />

        <TextView
            android:id="@+id/tv_confirm_address_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_confirm_name_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_confirm_address_label" />


        <TextView
            android:id="@+id/tv_confirm_city_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="4dp"
            android:text="@string/city"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_confirm_name_label"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_address_value" />

        <TextView
            android:id="@+id/tv_confirm_city_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_confirm_name_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_confirm_city_label" />

        <TextView
            android:id="@+id/tv_confirm_state_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="4dp"
            android:text="@string/state"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_confirm_name_label"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_city_value" />

        <TextView
            android:id="@+id/tv_confirm_state_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_confirm_name_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_confirm_state_label" />

        <TextView
            android:id="@+id/tv_confirm_zip_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="4dp"
            android:text="@string/zip"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_confirm_name_label"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_state_value" />

        <TextView
            android:id="@+id/tv_confirm_zip_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_confirm_name_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_confirm_zip_label" />

        <TextView
            android:id="@+id/tv_confirm_occupation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="4dp"
            android:text="@string/occupation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_confirm_name_label"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_zip_value" />

        <TextView
            android:id="@+id/tv_confirm_occupation_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_confirm_name_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_confirm_occupation_label" />

        <TextView
            android:id="@+id/tv_confirm_bio_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="4dp"
            android:text="@string/description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_confirm_name_label"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_occupation_value" />

        <TextView
            android:id="@+id/tv_confirm_bio_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_confirm_name_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_confirm_bio_label" />


        <TextView
            android:id="@+id/tv_confirm_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="4dp"
            android:text="@string/email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_confirm_name_label"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_bio_value" />

        <TextView
            android:id="@+id/tv_confirm_email_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_confirm_name_value"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_confirm_email_label" />

        <Button
            android:id="@+id/button_confirm_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_email_value" />

        <Button
            android:id="@+id/button_confirm_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/confirm"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_confirm_email_value" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_confirm_back" />

        <ImageView
            android:id="@+id/profile_imageview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:src="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/choose_image"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/profile_imageview"
            app:layout_constraintEnd_toEndOf="@+id/profile_imageview"
            app:layout_constraintStart_toStartOf="@+id/profile_imageview"
            app:layout_constraintTop_toTopOf="@+id/profile_imageview" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>





